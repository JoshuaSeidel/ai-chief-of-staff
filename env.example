# AI Chief of Staff - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DEPLOYMENT MODE
# ============================================
# standalone = Single container (simpler)
# microservices = Separate services (better performance)
DEPLOYMENT_MODE=standalone

# ============================================
# REQUIRED: AI API Keys
# ============================================
# Anthropic Claude API Key (required for all AI features)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API Key (optional, for voice transcription with Whisper)
OPENAI_API_KEY=sk-your-key-here

# ============================================
# REQUIRED: Domain Configuration (for production)
# ============================================
DOMAIN=aicos.yourdomain.com
EMAIL=admin@yourdomain.com

# ============================================
# REQUIRED: Database Configuration
# ============================================
POSTGRES_DB=ai_chief_of_staff
POSTGRES_USER=aicos
POSTGRES_PASSWORD=your-secure-password-here-change-this
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# REQUIRED: SWAG/Let's Encrypt DNS Validation
# ============================================
# Choose your DNS provider plugin:
# cloudflare, duckdns, route53, etc.
# See: https://github.com/linuxserver/docker-swag#parameters
DNS_PLUGIN=cloudflare

# For Cloudflare DNS validation, add these to swag-config/dns-conf/cloudflare.ini:
# dns_cloudflare_email = your@email.com
# dns_cloudflare_api_key = your-cloudflare-api-key

# ============================================
# MICROSERVICES: Service URLs (only if DEPLOYMENT_MODE=microservices)
# ============================================
# Redis (required for microservices)
REDIS_URL=redis://redis:6379

# AI Services
AI_INTELLIGENCE_URL=http://ai-intelligence:8001
PATTERN_RECOGNITION_URL=http://pattern-recognition:8002
NL_PARSER_URL=http://nl-parser:8003
VOICE_PROCESSOR_URL=http://voice-processor:8004
CONTEXT_SERVICE_URL=http://context-service:8005

# ============================================
# OPTIONAL: Google Calendar Integration
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/calendar/google/callback

# ============================================
# OPTIONAL: Push Notifications (Web Push)
# ============================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
# Or leave blank and generate in the UI later
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ============================================
# REQUIRED: SWAG/Let's Encrypt DNS Validation (production only)
# ============================================
# Choose your DNS provider plugin:
# cloudflare, duckdns, route53, etc.
# See: https://github.com/linuxserver/docker-swag#parameters
DNS_PLUGIN=cloudflare

# For Cloudflare DNS validation, add these to swag-config/dns-conf/cloudflare.ini:
# dns_cloudflare_email = your@email.com
# dns_cloudflare_api_key = your-cloudflare-api-key

# ============================================
# OPTIONAL: System Configuration
# ============================================
# User/Group IDs for file permissions
PUID=1000
PGID=1000

# Timezone (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/New_York

# Node environment
NODE_ENV=production

# ============================================
# NOTE: Additional configuration in the UI
# ============================================
# After starting, configure these in the web UI:
# - Claude Model selection
# - Calendar settings
# - Max tokens for AI responses
# - Custom AI prompts

